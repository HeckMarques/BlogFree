<%- include ('./partials/header.ejs') %>
<%- include ('./partials/homenavbar.ejs') %>
<body>
  <div class="container">
    
    <div class="jumbotron">
      <h1 class="display-4">Bem vindo</h1>
      <p class="lead">Blog desenvolvido com o curso GuiaDoProgramador</p>
      <hr class="my-4">
      <p>Node.js, Express, MySql, Sequelize, EJS e BootStrap 4</p>
     
    </div>
      <% articles.forEach(article => { %>
             <div class="card">
               <div class="card-header">
                 <h2><%= article.title%></h2>
               </div>
               <div class="card-body">
                 <a class="btn btn-success" href="/<%= article.slug %>">Ler artigo</a>
               </div>
             </div>
             <br>
      <% }) %>

      <div class="row">
        <div class="col col-12">
           <a style="float:right;" href="/articles/page/2">Next >>></a>
        </div>
      </div><hr>


  </div>
</body>
